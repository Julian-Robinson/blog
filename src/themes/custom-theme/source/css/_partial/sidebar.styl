if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul
      list-style: none
      li
        &:before
          content: "\f105"
          font-family: font-icon
          position: relative
          right: 10px
          color: color-accent
    ol
      list-style: decimal

.sidebar-title-icon
  @extend .icon
  float:right
  padding-right: 5px

.icon-recent-posts
  @extend .sidebar-title-icon
  &:after
    content: "\f1ea"

.icon-categories
  @extend .sidebar-title-icon
  &:after
    content: "\f02c"

.icon-tags
  @extend .sidebar-title-icon
  &:after
    content: "\f292"

.icon-archives
  @extend .sidebar-title-icon
  &:after
    content: "\f073"



.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
